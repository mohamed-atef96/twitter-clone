                        li 
                            a(href="/auth/logout")
                                    i.fas.fa-sign-out-alt                                                                                                                                                                                          




                .main-content.col-10.col-md-8.col-lg-6.p-0
                    block content 
                aside.bg-dark.d-md-block.d-none.col-md-2.col-lg-4
