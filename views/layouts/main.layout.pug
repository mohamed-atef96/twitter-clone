                        li 
                            a(href="/")
                                i.fas.fa-home
                        li 
                            a(href="/")
                                i.fas.fa-search
                        li 
                            a(href="/")
                                i.fas.fa-bell
                        li 
                            a(href="/")
                                i.fas.fa-envelope   
                        li 
                            a(href=`/profile/${userLoggedIn._id}`)
